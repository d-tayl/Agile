
<h1>Book a lawn</h1>

<div class="container">

  <% (Time.now.to_date..@future_days_to_show.days.from_now.to_date).each do |date| %>
  <div class="col-md-12">
    <div class="date-row row-container">
      <div class="col-md-3 lawn">
        <strong class="lawn-date"><%= date.strftime('%d/%m/%Y') %></strong>
      </div>
      
  <% (1..3).each do |i| %>
<% if @lawn_bookings.where(booking_date: date, lawn_no: i).count >= 1 %>
       <div class="col-md-3 lawn"> 
      <div class="booked">
          <p><strong>Lawn number <%= i %></strong></p>
          <p>This lawn is booked.</p>
         </div>
        </div>
  <%else %>
   <div class="col-md-3 lawn"> 
     <div class="unbooked"  data-date="<%= date %>" data-lawn-no="<%= i %>" >

     <p><strong>Lawn number <%= i %></strong></p>
     <input type="button" class="bookButton" data-date="<%= date %>" data-lawn-no="<%= i %>" value="Book Lawn" />
     </div>
      </div>
     <% end %>

<% end %> 
    </div>
  </div>
<% end %>
</div>


      

